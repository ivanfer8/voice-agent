# ========================================
# CONFIGURACIÓN GENERAL
# ========================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ========================================
# MODO DE OPERACIÓN
# ========================================
# true = Usa nueva arquitectura streaming (v2)
# false = Usa arquitectura legacy POST /stt (v1)
ENABLE_REALTIME=false

# ========================================
# DEEPGRAM (STT)
# ========================================
DEEPGRAM_API_KEY=your_deepgram_key_here
DEEPGRAM_MODEL=nova-2
DEEPGRAM_LANGUAGE=es

# ========================================
# OPENAI (LLM)
# ========================================
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4o-mini

# ========================================
# ELEVENLABS (TTS)
# ========================================
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here
# Modelos disponibles: eleven_turbo_v2_5 (más rápido) | eleven_multilingual_v2 (mejor calidad)
ELEVENLABS_MODEL=eleven_turbo_v2_5

# ========================================
# REDIS (OPCIONAL - para sesiones distribuidas)
# ========================================
# Si no se configura, se usa memoria local
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# AUDIO CONFIG
# ========================================
# Tamaño de chunks de audio en ms
AUDIO_CHUNK_SIZE_MS=100
# Máximo tiempo de silencio antes de considerar fin de frase (ms)
MAX_SILENCE_MS=1500
# Umbral para detectar voz (bytes) - ajustar según pruebas
VAD_THRESHOLD_BYTES=500

# ========================================
# SESSION CONFIG
# ========================================
# Máximo de mensajes en historial por sesión
MAX_HISTORY_MESSAGES=15
# Tiempo de expiración de sesión inactiva (ms)
SESSION_TIMEOUT_MS=1800000

# ========================================
# MONITORING
# ========================================
# Activar métricas detalladas de latencia
ENABLE_METRICS=true
# Activar logs de debugging (mucho volumen)
DEBUG_AUDIO=false
